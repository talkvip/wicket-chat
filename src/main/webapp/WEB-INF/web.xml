<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
    <display-name>wicket-chat</display-name>

    <filter>
        <filter-name>WicketChatApplication</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>yevgeniy.melnichuk.example.wicket.ChatApplication</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>WicketChatApplication</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
